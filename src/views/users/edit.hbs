<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/users/edit/{{users._id}}" method="POST">
                    <div class="form-group">
                        <input type="text" name="fullname" placeholder="Write Full Name" value="{{users.fullname}}"
                            class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="department" class="form-control" value="{{users.department}}"
                            placeholder="Write Department Name">
                    </div>
                    <div class="form-group">
                        <input type="text" name="position" class="form-control" value="{{users.position}}"
                            placeholder="Write Position">
                    </div>
                    <div class="form-group">
                        <input type="text" name="addressLive" class="form-control" value="{{users.addressLive}}"
                            placeholder="Write Address">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Update
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>